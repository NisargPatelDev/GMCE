                </div>
                <div class="col-6">
                    <div class="form-group">
                        <label>Select</label>
                        <select class="form-control" id="SelectStdType">
                            <option>RUNNING</option>
                            <option>PASSOUT</option>
                            <option>DROPOUT</option>                            
                        </select>
                    </div>
                </div>
            </div>
           
            <!-- /.input group -->
        </div>

        <!-- /.form group -->
    </div>


</div>


