<div class="modal bd-example-modal-lg" tabindex="-1" id="EditModal" role="dialog" aria-labelledby="myLargeModalLabel" aria-hidden="true" style="overflow:hidden">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h4 class="modal-title">Edit Student Data</h4>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Registration Date</label>
                            <input type="hidden" id="HidId" />
                            <input type="date" class="form-control" id="RegistrationDate" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Start Date</label>
                            <input type="date" class="form-control" id="StartDate" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                        </div>
                    </div>
                    <!-- /.col -->
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>STD ID</label>
                            <input type="text" id="STDID" class="form-control" style="text-transform:uppercase" disabled />
                        </div>
                        <!-- /.form-group -->
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Student Name</label>
                            <input type="Text" id="StudentName" class="form-control" style="text-transform:uppercase" />
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Course</label>
                            <input type="Text" id="Cource" class="form-control" style="text-transform:uppercase" />
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                </div>

                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Student Mo:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                                @*<input type="number" id="StudentMO" class="form-control" maxlength="10">*@
                                @*<input type="text" id="StudentMO" class="form-control" name="phone" maxlength="10">*@
                                <input type="number" id="StudentMO" class="form-control" onKeyDown="if(this.value.length==10 && event.keyCode!=8) return false;">
                            </div>
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Parent's Mo:</label>
                            <div class="input-group">
                                <div class="input-group-prepend">
                                    <span class="input-group-text"><i class="fas fa-phone"></i></span>
                                </div>
                                @*<input type="number" id="ParentsMo" class="form-control">*@
                                @*<input type="text" id="ParentsMo" class="form-control" name="phone" maxlength="10">*@
                                <input type="number" id="ParentsMo" class="form-control" onKeyDown="if(this.value.length==10 && event.keyCode!=8) return false;">

                            </div>
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                </div>
                <!-- /.row -->
                <div class="row">
                    <div class="col-12 col-sm-6">
                        <div class="form-group">
                            <label>Total Fee:</label>
                            <input type="number" id="TotalFee" class="form-control">
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <div class="col-12 col-sm-6" style="margin-top:4.5%">
                        <div class="form-group">
                            <label>Fees Payment : </label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="FeesType" value="LUMPSUM" checked="checked">
                                <label class="form-check-label" for="inlineRadio1">LUMPSUM</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="FeesType" value="INSTALLMENT">
                                <label class="form-check-label" for="inlineRadio2">INSTALLMENT</label>
                            </div>
                        </div>
                        <!-- /.form-group -->

                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                </div>
                <div class="row">
                    <div class="col-12 col-sm-5">
                        <div class="form-group">
                            <label>D.O.B</label>
                            <input type="date" style="text-transform:uppercase" class="form-control" id="DOB" data-inputmask-alias="datetime" data-inputmask-inputformat="dd/mm/yyyy" data-mask>
                        </div>
                    </div>
                    <div class="col-12 col-sm-3">
                        <div class="form-group">
                            <label>Age:</label>
                            <input type="number" id="Age" class="form-control" style="text-transform:uppercase" disabled>
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <div class="col-12 col-sm-4" style="margin-top:4.5%">
                        <div class="form-group">
                            <label>Gender : </label>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="Gender" value="Male" checked="checked">
                                <label class="form-check-label" for="inlineRadio1">MALE</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input" type="radio" name="Gender" value="FEMALE">
                                <label class="form-check-label" for="inlineRadio2">FEMALE</label>
                            </div>
                        </div>
                        <!-- /.form-group -->
                    </div>
                    <!-- /.col -->
                    <!-- /.col -->
                </div>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-default" data-dismiss="modal" style="margin-left:81%">Cancel</button>
                <button type="button" class="btn btn-primary" id="btnEditStudent">Save</button>
            </div>
        </div>
            
        </div>
    </div>



